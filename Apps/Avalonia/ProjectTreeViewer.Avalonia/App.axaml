<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ProjectTreeViewer.Avalonia.Converters"
             x:Class="ProjectTreeViewer.Avalonia.App">
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://ProjectTreeViewer.Avalonia/Styles/Theme.axaml" />
    </Application.Styles>

    <Application.Resources>
        <converters:TreeIndentConverter x:Key="TreeIndentConverter" IndentSize="16" />
    </Application.Resources>

    <Application.RequestedThemeVariant>Default</Application.RequestedThemeVariant>

</Application>
