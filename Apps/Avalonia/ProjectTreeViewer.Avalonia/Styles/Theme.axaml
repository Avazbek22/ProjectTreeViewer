<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <!-- Colors -->
                    <Color x:Key="AppBackgroundColor">#FFFFFF</Color>
                    <Color x:Key="AppPanelColor">#F3F3F3</Color>
                    <Color x:Key="AppBorderColor">#C7C7C7</Color>
                    <Color x:Key="AppAccentColor">#0078D4</Color>
                    <Color x:Key="AppTextColor">#1A1A1A</Color>
                    <Color x:Key="AppMutedTextColor">#5E5E5E</Color>
                    <Color x:Key="TreeSelectionColor">#DCEEFF</Color>
                    <Color x:Key="TreeSearchHighlightColor">#FBC02D</Color>

                    <!-- Brushes -->
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}" />
                    <SolidColorBrush x:Key="AppPanelBrush" Color="{StaticResource AppPanelColor}" />
                    <SolidColorBrush x:Key="AppBorderBrush" Color="{StaticResource AppBorderColor}" />
                    <SolidColorBrush x:Key="AppAccentBrush" Color="{StaticResource AppAccentColor}" />
                    <SolidColorBrush x:Key="AppTextBrush" Color="{StaticResource AppTextColor}" />
                    <SolidColorBrush x:Key="AppMutedTextBrush" Color="{StaticResource AppMutedTextColor}" />
                    <SolidColorBrush x:Key="TreeSelectionBrush" Color="{StaticResource TreeSelectionColor}" />
                    <SolidColorBrush x:Key="TreeSelectionTextBrush" Color="{StaticResource AppTextColor}" />
                    <SolidColorBrush x:Key="TreeSearchHighlightBrush" Color="{StaticResource TreeSearchHighlightColor}" />
                    <SolidColorBrush x:Key="TreeSearchHighlightTextBrush" Color="#000000" />
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <!-- Colors -->
                    <Color x:Key="AppBackgroundColor">#121214</Color>
                    <Color x:Key="AppPanelColor">#17171A</Color>
                    <Color x:Key="AppBorderColor">#2B2F36</Color>
                    <Color x:Key="AppAccentColor">#4CC2FF</Color>
                    <Color x:Key="AppTextColor">#E7E9EF</Color>
                    <Color x:Key="AppMutedTextColor">#9AA3B2</Color>
                    <Color x:Key="TreeSelectionColor">#254861</Color>
                    <Color x:Key="TreeSearchHighlightColor">#FBC02D</Color>

                    <!-- Brushes -->
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}" />
                    <SolidColorBrush x:Key="AppPanelBrush" Color="{StaticResource AppPanelColor}" />
                    <SolidColorBrush x:Key="AppBorderBrush" Color="{StaticResource AppBorderColor}" />
                    <SolidColorBrush x:Key="AppAccentBrush" Color="{StaticResource AppAccentColor}" />
                    <SolidColorBrush x:Key="AppTextBrush" Color="{StaticResource AppTextColor}" />
                    <SolidColorBrush x:Key="AppMutedTextBrush" Color="{StaticResource AppMutedTextColor}" />
                    <SolidColorBrush x:Key="TreeSelectionBrush" Color="{StaticResource TreeSelectionColor}" />
                    <SolidColorBrush x:Key="TreeSelectionTextBrush" Color="{StaticResource AppTextColor}" />
                    <SolidColorBrush x:Key="TreeSearchHighlightBrush" Color="{StaticResource TreeSearchHighlightColor}" />
                    <SolidColorBrush x:Key="TreeSearchHighlightTextBrush" Color="#000000" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <Thickness x:Key="TreeItemPadding">6,2</Thickness>
            <Thickness x:Key="PanelPadding">12</Thickness>
            <Thickness x:Key="SectionTitleMargin">0,16,0,6</Thickness>
            <Thickness x:Key="SettingsSectionMargin">0,10,0,0</Thickness>
            <Thickness x:Key="SettingsHeaderMargin">0,0,0,6</Thickness>
            <Thickness x:Key="SettingsHeaderTextMargin">0,2,0,0</Thickness>
            <Thickness x:Key="SectionAllMargin">0,2,4,0</Thickness>
            <Thickness x:Key="ChecklistPadding">6</Thickness>
            <Thickness x:Key="ChecklistItemMargin">0,2</Thickness>
            <Thickness x:Key="SearchPanelMargin">12,6</Thickness>
            <x:Double x:Key="SettingsSectionSpacing">6</x:Double>
            <x:Double x:Key="SearchPanelSpacing">8</x:Double>
            <x:Double x:Key="TreeItemSpacing">6</x:Double>
        </ResourceDictionary>
    </Styles.Resources>

    <Style Selector="Window">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextBrush}" />
    </Style>

    <Style Selector="Menu">
        <Setter Property="Background" Value="{DynamicResource AppPanelBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
    </Style>

    <Style Selector="TextBox">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextBrush}" />
    </Style>

    <Style Selector="ComboBox">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextBrush}" />
    </Style>

    <Style Selector="TreeView">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextBrush}" />
    </Style>

    <Style Selector="TreeViewItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Padding" Value="{DynamicResource TreeItemPadding}" />
        <Setter Property="FontFamily" Value="{Binding FontFamily, RelativeSource={RelativeSource AncestorType=TreeView}}" />
        <Setter Property="FontSize" Value="{Binding FontSize, RelativeSource={RelativeSource AncestorType=TreeView}}" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextBrush}" />
    </Style>

    <Style Selector="TreeViewItem:pointerover">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextBrush}" />
    </Style>

    <Style Selector="TreeViewItem:selected">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextBrush}" />
    </Style>

    <Style Selector="TreeViewItem:selected:pointerover">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextBrush}" />
    </Style>

    <Style Selector="Button">
        <Setter Property="Background" Value="{DynamicResource AppPanelBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextBrush}" />
    </Style>

    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="{DynamicResource AppBorderBrush}" />
    </Style>

    <Style Selector="ScrollViewer">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style Selector="TextBlock.section-title">
        <Setter Property="Foreground" Value="{DynamicResource AppMutedTextBrush}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="{DynamicResource SectionTitleMargin}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource AppTextBrush}" />
    </Style>

    <Style Selector="Border.panel">
        <Setter Property="Background" Value="{DynamicResource AppPanelBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="{DynamicResource PanelPadding}" />
    </Style>

    <Style Selector="Border.search-panel">
        <Setter Property="Background" Value="{DynamicResource AppPanelBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
    </Style>

    <Style Selector="StackPanel.settings-section">
        <Setter Property="Margin" Value="{DynamicResource SettingsSectionMargin}" />
    </Style>

    <Style Selector="Border.checklist-border">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="{DynamicResource ChecklistPadding}" />
    </Style>

    <Style Selector="CheckBox.list-item">
        <Setter Property="Margin" Value="{DynamicResource ChecklistItemMargin}" />
    </Style>

    <Style Selector="CheckBox.section-all">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Margin" Value="{DynamicResource SectionAllMargin}" />
    </Style>

    <Style Selector="ScrollViewer.checklist-scroll">
        <Setter Property="Background" Value="Transparent" />
    </Style>

</Styles>
