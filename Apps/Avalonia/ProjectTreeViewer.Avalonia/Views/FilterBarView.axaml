<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ProjectTreeViewer.Avalonia.ViewModels"
             x:Class="ProjectTreeViewer.Avalonia.Views.FilterBarView"
             x:DataType="vm:MainWindowViewModel">
  <Border Classes="filter-panel" IsVisible="{Binding FilterVisible}" IsEnabled="{Binding IsProjectLoaded}">
    <StackPanel Orientation="Horizontal" Spacing="8" Margin="12,6">
      <TextBox Name="FilterBox"
               Watermark="{Binding FilterByNamePlaceholder}"
               Text="{Binding NameFilter, Mode=TwoWay}"
               Width="260"
               KeyDown="OnFilterKeyDown" />
      <Button Content="âœ•" Width="32" Click="OnFilterClose" />
    </StackPanel>
  </Border>
</UserControl>
