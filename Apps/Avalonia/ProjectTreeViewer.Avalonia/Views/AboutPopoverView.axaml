<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ProjectTreeViewer.Avalonia.ViewModels"
             x:Class="ProjectTreeViewer.Avalonia.Views.AboutPopoverView"
             x:DataType="vm:MainWindowViewModel">
  <Border Classes="theme-popover"
          Padding="14"
          Width="500"
          MinWidth="380"
          MaxWidth="{Binding AboutPopoverMaxWidth}"
          MinHeight="240"
          MaxHeight="{Binding AboutPopoverMaxHeight}">
    <Grid RowDefinitions="Auto,*,Auto">
      <Grid ColumnDefinitions="*,Auto">
        <TextBlock Text="{Binding HelpAboutTitle}" FontSize="15" FontWeight="SemiBold" />
        <Button Grid.Column="1"
                Content="âœ•"
                Classes="menu-icon-button"
                Padding="4"
                Click="OnClose" />
      </Grid>

      <ScrollViewer Grid.Row="1" Margin="0,12,0,12"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
        <TextBlock Text="{Binding HelpAboutBody}"
                   TextWrapping="Wrap"
                   FontSize="15" />
      </ScrollViewer>

      <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
        <Button Content="{Binding HelpAboutOpenLink}" Click="OnOpenLink" />
        <Button Content="{Binding HelpAboutCopyLink}" Click="OnCopyLink" />
      </StackPanel>
    </Grid>
  </Border>
</UserControl>
