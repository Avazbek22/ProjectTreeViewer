<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ProjectTreeViewer.Avalonia.ViewModels"
             x:Class="ProjectTreeViewer.Avalonia.Views.AboutPopoverView"
             x:DataType="vm:MainWindowViewModel">
  <Border Classes="theme-popover" Padding="14" MinWidth="400" MinHeight="220" MaxWidth="520">
    <StackPanel Spacing="12">
      <Grid ColumnDefinitions="*,Auto">
        <TextBlock Text="{Binding HelpAboutTitle}" FontSize="14" FontWeight="SemiBold" />
        <Button Grid.Column="1"
                Content="âœ•"
                Classes="menu-icon-button"
                Padding="4"
                Click="OnClose" />
      </Grid>

      <TextBlock Text="{Binding HelpAboutBody}"
                 TextWrapping="Wrap"
                 FontSize="13" />

      <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
        <Button Content="{Binding HelpAboutOpenLink}" Click="OnOpenLink" />
        <Button Content="{Binding HelpAboutCopyLink}" Click="OnCopyLink" />
      </StackPanel>
    </StackPanel>
  </Border>
</UserControl>
