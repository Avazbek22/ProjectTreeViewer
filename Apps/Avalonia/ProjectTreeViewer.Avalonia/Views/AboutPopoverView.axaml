<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ProjectTreeViewer.Avalonia.ViewModels"
             x:Class="ProjectTreeViewer.Avalonia.Views.AboutPopoverView"
             x:DataType="vm:MainWindowViewModel">
  <Border Classes="theme-popover"
          Padding="14"
          MinWidth="320"
          MinHeight="240"
          MaxWidth="{Binding HelpPopoverMaxWidth}"
          MaxHeight="{Binding HelpPopoverMaxHeight}">
    <StackPanel Spacing="12">
      <Grid ColumnDefinitions="*,Auto">
        <TextBlock Text="{Binding HelpAboutTitle}" FontSize="15" FontWeight="SemiBold" />
        <Button Grid.Column="1"
                Content="âœ•"
                Classes="menu-icon-button"
                Padding="4"
                Click="OnClose" />
      </Grid>

      <TextBlock Text="{Binding HelpAboutBody}"
                 TextWrapping="Wrap"
                 FontSize="14" />

      <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
        <Button Content="{Binding HelpAboutOpenLink}" Click="OnOpenLink" />
        <Button Content="{Binding HelpAboutCopyLink}" Click="OnCopyLink" />
      </StackPanel>
    </StackPanel>
  </Border>
</UserControl>
