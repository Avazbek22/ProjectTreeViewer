<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ProjectTreeViewer.Avalonia.ViewModels"
             x:Class="ProjectTreeViewer.Avalonia.Views.HelpPopoverView"
             x:DataType="vm:MainWindowViewModel">
  <Border Classes="theme-popover"
          Padding="16"
          MinWidth="320"
          MinHeight="240"
          MaxWidth="{Binding HelpPopoverMaxWidth}"
          MaxHeight="{Binding HelpPopoverMaxHeight}">
    <DockPanel LastChildFill="True">
      <Grid DockPanel.Dock="Top" ColumnDefinitions="*,Auto" Margin="0,0,0,8">
        <TextBlock Text="{Binding HelpHelpTitle}" FontSize="15" FontWeight="SemiBold" />
        <Button Grid.Column="1"
                Content="âœ•"
                Classes="menu-icon-button"
                Padding="4"
                Click="OnClose" />
      </Grid>

      <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <TextBlock Text="{Binding HelpHelpBody}"
                   TextWrapping="Wrap"
                   FontSize="14" />
      </ScrollViewer>
    </DockPanel>
  </Border>
</UserControl>
