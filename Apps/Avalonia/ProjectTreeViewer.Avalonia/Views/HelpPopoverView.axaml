<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ProjectTreeViewer.Avalonia.ViewModels"
             x:Class="ProjectTreeViewer.Avalonia.Views.HelpPopoverView"
             x:DataType="vm:MainWindowViewModel">
  <Border Classes="theme-popover"
          Padding="16"
          MinWidth="360"
          MinHeight="260"
          MaxWidth="{Binding HelpPopoverMaxWidth}"
          MaxHeight="{Binding HelpPopoverMaxHeight}">
    <Grid RowDefinitions="Auto,*">
      <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
        <TextBlock Text="{Binding HelpHelpTitle}" FontSize="17" FontWeight="SemiBold" />
        <Button Grid.Column="1"
                Content="âœ•"
                Classes="menu-icon-button"
                Padding="4"
                Click="OnClose" />
      </Grid>

      <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Name="BodyPanel" Spacing="6" />
      </ScrollViewer>
    </Grid>
  </Border>
</UserControl>
